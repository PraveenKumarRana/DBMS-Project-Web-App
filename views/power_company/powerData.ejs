<% include ../partials/header %>
    
    <div class="make-row container">
        <h1 class="table-header">Power Companies</h1>
        <div class="search-bar" style="align-self: center">
            <form class="form-inline" action="/powercompanylist" method="post">
                <input class="form-control" type="search" placeholder="Search by State" name="state"></input>
                <input class="btn btn-primary" type="submit" value="Search"></input>
            </form>
            <%if(admin.eid && admin.designation==="designation5"){%>
                <a class="btn btn-success" href="/powercompany/new">Add New</a>
            <%}%>
        </div>
        <div class="item">
            <p><b>PID</b></p>
            <p><b>PNAME</b></p>
            <p><b>Total Power</b></p>
            <p><b>Type</b></p>
            <p><b>Location</b></p>
        </div>
        <%result.forEach(function(powerCompany){%>
            <div style="background-color: rgb(252, 252, 252); margin: 5px 0px;">
            <div class="item">
                <p><%= powerCompany.pid %></p>
                <p><%= powerCompany.pname %></p>
                <p><%= powerCompany.totalpower %></p>
                <p><%= powerCompany.type %></p>
                <p><%= powerCompany.state %></p>
            </div>
            <%if(admin.eid && admin.designation==="designation5"){%>
                <div class="item">
                    <div>
                        <form action="/powercompany/update"  method="post">
                            <input class="get-id" name="name" value="<%= powerCompany.pid %>"></input>
                            <input type="submit" class="btn btn-info" style="margin-right: 10px" value="Update"></input>
                        </form>
                    </div>
                    <div>
                        <form action="/powercompany/delete" method="post">
                            <input class="get-id" name="name" value="<%= powerCompany.pid %>"></input>
                            <input type="submit" class="btn btn-danger" value="Delete"></input>
                        </form>
                    </div>
                </div>
                <%}%>
            </div>
        <%});%>
    </div>
<% include ../partials/footer %>