<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/tables.css">
    <title>Electricity Distribution System</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">EDS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
            <a class="nav-link" href="/electricityboardlist">Electricity Board</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" href="/distcompanylist">Distribution Company</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/transmissioncompanylist">Transmission Company</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/powercompanylist">Power Company</a>
            </li>
        </ul>
        <ul class="navbar-nav pull-right">
            <%if(consumerId){%>
                <li class="nav-item">
                        <a class="nav-link" href="/profile">Hi &nbsp;<%=consumerId.cname%></a>
                        </li>
                <li class="nav-item">
                    <form action="/logout" method="post">
                        <input style="border: 0px; margin-top:7px; margin-left: 10px ; background-color: gainsboro" type="submit" value="Logout"></input>
                    </form>
                </li>
            <%}%>
            <%if(!consumerId){%>
            <li class="nav-item">
            <a class="nav-link" href="/admin/login">Admin Login</a>
            </li>
            <%}%>
        </ul>
        </div>
    </nav>

    <div class="make-row container">
        <h1 class="table-header"><%=consumerId.cname%>, &nbsp; Your Electricity Bill</h1>
        <%billingInfo.forEach(function(bill){%>
            <div class="item">
                <div class="items">
                    <p><b>Meter Number: </b><%=bill.meterno%></p>
                    <p><b>Consumer Number: </b><%=bill.cid%></p>
                    <p><b>Address: </b><%=bill.address%></p>
                    <p><b>Circle: </b></p>
                    <p><b>Division: </b><%=bill.divis%></p>
                    <p><b>Sub Division: </b><%=bill.subdiv%></p>
                    <p><b>Bill No. : </b><%=bill.billid%></p>
                    <p><b>Bill Date: </b><%=bill.issuedate%></p>
                </div>
                <div class="items">
                    <p><b>Bill Due Date: </b></p>
                    <p><b>Current Meter Reading: </b><%=bill.curreading%></p>
                    <p><b>Previous Meter Reading: </b><%=bill.prevreading%></p>
                    <p><b>Unit Consumed: </b><%=bill.curreading - bill.prevreading%></p>
                    <p><b>Price/Unit: </b><%=bill.rate%></p>
                    <p><b>Total Price: </b><%=bill.rate * (bill.curreading - bill.prevreading)%></p>
                </div>
                <div style="height: 20px; border-bottom: 1px solid blue; margin-bottom: 20px">

                </div>
            </div>
        <%});%>
    </div>
<% include ../partials/footer %>