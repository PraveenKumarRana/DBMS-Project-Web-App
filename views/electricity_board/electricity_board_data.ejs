<% include ../partials/header %>
    
    <div class="make-row container">
        <h1 class="table-header">Electricity Boards</h1>
        <div class="search-bar" style="align-self: center">
            <form class="form-inline" action="/electricityboardlist" method="post">
                <input class="form-control" type="search" placeholder="Search by State" name="state"></input>
                <input class="btn btn-primary" type="submit" value="Search"></input>
            </form>
        </div>
        <div class="item">
            <p><b>Board Name</b></p>
            <p><b>Number of Consumer</b></p>
            <p><b>State</b></p>
            <p><b>Chairman ID</b></p>
            <p><b>Power Consumed</b></p>
        </div>
        <%result.forEach(function(electricityboard){%>
            <div class="item">
                <p><%= electricityboard.boardname %></p>
                <p><%= electricityboard.noofconsumer %></p>
                <p><%= electricityboard.state %></p>
                <p><%= electricityboard.chairmanid %></p>
                <p><%= electricityboard.powerconsumed %></p>
            </div>
            
        <%});%>
    </div>
<% include ../partials/footer %>