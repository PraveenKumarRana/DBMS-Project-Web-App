<% include ../partials/header %>
    
    <div class="make-row container">
        <h1 class="table-header">Transmission Companies</h1>
        <div class="search-bar" style="align-self: center">
            <form class="form-inline" action="/transmissioncompanylist" method="post">
                <input class="form-control" type="search" placeholder="Search by State" name="state"></input>
                <input class="btn btn-primary" type="submit" value="Search"></input>
            </form>
            <%if(admin.eid && admin.designation==="designation5"){%>
                <a class="btn btn-success" href="/transmissioncompany/new">Add New</a>
            <%}%>
        </div>
        <div class="item">
            <p><b>TID</b></p>
            <p><b>TNAME</b></p>
            <p><b>DID</b></p>
            <p><b>Total Capacity</b></p>
            <p><b>State</b></p>
            <p><b>Tenure</b></p>
        </div>
        <%result.forEach(function(transCompany){%>
            <div style="background-color: rgb(252, 252, 252); margin: 5px 0px; padding: 0px 3px;">
            <div class="item">
                <p><%= transCompany.tid %></p>
                <p><%= transCompany.tname %></p>
                <p><%= transCompany.did %></p>
                <p><%= transCompany.tcapacity %></p>
                <p><%= transCompany.state %></p>
                <p><%= transCompany.tenure %></p>
            </div>
            <%if(admin.eid && admin.designation==="designation5"){%>
                <div class="item">
                    <div>
                        <form action="/transmissioncompany/update"  method="post">
                            <input class="get-id" name="name" value="<%= transCompany.tid %>"></input>
                            <input type="submit" class="btn btn-info" style="margin-right: 10px" value="Update"></input>
                        </form>
                    </div>
                    <div>
                        <form action="/transmissioncompany/delete" method="post">
                            <input class="get-id" name="name" value="<%= transCompany.tid %>"></input>
                            <input type="submit" class="btn btn-danger" value="Delete"></input>
                        </form>
                    </div>
                </div>
                <%}%>
            </div>
        <%});%>
    </div>
<% include ../partials/footer %>